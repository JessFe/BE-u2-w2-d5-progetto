@model GestioneHotel.Models.Login

@{
    ViewBag.Title = "Login";
}



@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "h-100 d-flex align-items-center" }))
{
    @Html.AntiForgeryToken()

    <div class="d-flex justify-content-center w-100">

        <div class="d-flex flex-column align-items-center bg-light bg-opacity-50  rounded-4 w-50 py-4 px-3">


            <div class="form-group text-center">
                @Html.LabelFor(m => m.Username)
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Username)
            </div>

            <div class="form-group text-center">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

            <button type="submit" class="btn btn-secondary mt-3 px-3"><i class="bi bi-unlock"></i></button>


        </div>

    </div>

}

